<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btnmodulo1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="46dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/stylo_boton"
        android:textColor="@drawable/stylo_text_boton"
        android:drawableLeft="@drawable/icon_modulo1"
        android:text="Modulo 1. Operacion y mantenimiento "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnmodulo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnmodulo2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="46dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/stylo_boton"
        android:textColor="@drawable/stylo_text_boton"
        android:drawableLeft="@drawable/icon_modulo2"
        android:text="MOdulo 2. Proveedores"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnmodulo3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnmodulo1" />

    <Button
        android:id="@+id/btnmodulo3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="363dp"
        android:background="@drawable/stylo_boton"
        android:drawableLeft="@drawable/icon_modulo2"
        android:textColor="@drawable/stylo_text_boton"
        android:text="Modulo 3. indicadores de gestion"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnmodulo2" />


</androidx.constraintlayout.widget.ConstraintLayout>