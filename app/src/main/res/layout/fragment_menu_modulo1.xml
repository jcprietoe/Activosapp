<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    tools:context=".Menu_modulo1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Operacion y Mantenimineto"
        android:textStyle="bold"
        android:textSize="25sp"/>


    <Button
        android:id="@+id/btn_crear_activo"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Crear Activo" />

    <Button
        android:id="@+id/btn_revision_preoperacional"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Revision Pre operacional" />

    <Button
        android:id="@+id/btn_reporte_novedad"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Reporte de novedad" />

    <Button
        android:id="@+id/btn_generaorden"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Generacion ordenes de trabajo, compra y cierre" />

    <Button
        android:id="@+id/btn_crear_planmante"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="creacion plan de mantenimineto" />

    <Button
        android:id="@+id/btn_planoperacion"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="planear la operacion" />

    <Button
        android:id="@+id/btn_planearmante"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="planear mantenimiento" />

</LinearLayout>